<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Eletek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/elet1"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/elet2"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/elet3"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart" />
    </LinearLayout>

    <EditText
        android:id="@+id/tipp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Eletek"
        android:layout_marginTop="20dp"
        android:height="40dp"
        android:hint="Tippelj!"
        android:inputType="number"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ellenorzes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipp"
        android:layout_marginTop="20dp"
        android:text="Ellenőrzés" />

    <TextView
        android:id="@+id/eredmeny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ellenorzes"
        android:layout_marginTop="20dp"
        android:text="Eredmény: 0"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>


